<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style type="text/css">
        .dotted {
            border: 1px dotted #ff0000;
            border-style: none none dotted;
            color: #fff;
            background-color: #fff;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        a:link,
        a:visited {
            display: block;
            font-weight: bold;
            color: #FFFFFF;
            background-color: #98bf21;
            width: 120px;
            text-align: center;
            padding: 4px;
            text-transform: uppercase;
            text-decoration: none;
        }

        a:hover,
        a:active {
            background-color: #7A991A;
        }

        li {
            float: left;
        }

        .home {
            padding-left: 1px;
            padding-right: 1px;
            text-transform: capitalize;
        }

        body {
            background-color: white;
            margin: 0;
            padding: 0;
            border: 0;
        }

        .one {
            text-align: center;
            color: red;
            font-size: 30px;
        }

        .two {
            text-align: center;
            margin-left: 320px;
            margin-top: -16px;
        }

        .three {
            width: 636px;
            height: 250px;
            border: 2px #98bf21 solid;
            margin-left: 320px;
            margin-top: 5px;
            padding-top: 100px;
            text-align: center;
            font-size: 20px;
        }

        .seven{
            margin-top: -80px;
            font-size: 25px;
        }

        .four{
            font-size: 20px;
            margin-left: -30px;
        }

        .five{
            width: 120px;
        }

        .six{
            margin-left: 270px
        }
    </style>
</head>

<body>
    <!-- <div class='main'></div> -->
    <h2 class='one'>STUDENT HOME</h2>
    <hr class='dotted' />
    <p class="home" style="margin-left: 575px;"><a href="/Home2/<%= record.email%>">Home</a></p>
    <div class='two'>
        <ul>
            <li><a href="/currentPolls/<%= record.email%>">Current Polls</a></li>
            <li><a href="/manageProfile/<%= record.email%>">Manage Profile</a></li>
            <li><a href="/viewResults/<%= record.email%>">Election Results</a></li>
            <li><a href="/electionAnalysis/<%= record.email%>">Election Analysis</a></li>
            <li><a href="/apply/<%= record.email%>">Apply Nomination</a></li>
        </ul>
    </div>
    <div class='three'>
        <p class='seven'>SELECT POSITION TO VOTE</p>
        <form method="POST" action="/currentPolls/<%= record.email%>">
                <% if(record1.length > 0) %>
                <% record1.forEach(function(data){ %>
                    <label class='four' for="position">Select Candidate for <%=data.name%></label><br>

                    <% if(record2.length > 0) %>
                    <% record2.forEach(function(dat){ %>
                        <% if(dat.position == data.name) { %>
                    <input class="five" type="radio" name="<%=data.name%>" value="<%=dat.name%>">
                    <label style="margin-left: -50px;"><%=dat.name%></label><br>
                        <% } %>
                    <% }) %>

                <% }) %>
            
            <input class='six' type="submit" value="Vote" />
        </form>
    </div>
</body>

</html>